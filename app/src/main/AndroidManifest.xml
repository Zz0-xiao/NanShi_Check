<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.xiao.nanshi_check"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
        <uses-permission android:name="android.permission.BLUETOOTH"/>

        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/MyFullScreenTheme">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.StudentManagementActivity"
            android:theme="@style/GeneralTheme">
        </activity>
        <activity android:name=".activity.AddEquipmentActivity">
        </activity>
        <activity android:name=".activity.AddStudentActivity">
        </activity>
        <activity android:name=".activity.WifiTestActivity">
        </activity>
    </application>

</manifest> <!-- android:theme="@style/GeneralTheme" -->
